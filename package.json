{
	"name": "node-app-template-ts",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.ts",
	"scripts": {
		"prettier:fmt": "prettier --config .prettierrc 'src/**/*.ts' --write",
		"lint": "npm run prettier:fmt && eslint . --ext .ts --fix --color",
		"build": "rm -rf dist/ && tsc -b",
		"dev:nodemon": "npm run lint && nodemon -L --watch './**/*.ts' --exec 'ts-node' src/index.ts",
		"dev:ts-node-dev": "npm run lint && ts-node-dev src/index.ts",
		"start": "NODE_ENV=production node dist/index.js",
		"test": "jest --verbose",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watchAll"
	},
	"keywords": [],
	"author": "Juan Sebasti√°n Agudelo @juansacdev <juansac.me@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "5.22.0",
		"@typescript-eslint/parser": "5.22.0",
		"eslint": "8.15.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-prettier": "4.0.0",
		"nodemon": "2.0.16",
		"prettier": "2.6.2",
		"ts-node": "10.7.0",
		"ts-node-dev": "2.0.0",
		"jest": "28.1.0",
		"ts-jest": "28.0.3",
		"@types/jest": "27.5.1",
		"typescript": "4.6.4"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	}
}
